<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:mohe="http://schemas.android.com/apk/res/com.duolaguanjia"
              android:orientation="vertical"
              android:background="@color/whitesmoke"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/view_title"></include>



    <RelativeLayout
            android:id="@+id/input_money"
                    android:orientation="horizontal"
                    android:background="@color/white"
            android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height">

        <TextView android:id="@+id/tv_input_name" android:text="充值金额" android:layout_centerVertical="true" android:textSize="16sp" android:layout_marginLeft="10dp"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"/>

        <com.duolaguanjia.view.EditTextWithDel android:hint="请输入充值金额" android:textCursorDrawable="@drawable/color_cursor" android:id="@+id/et_input_content" android:textSize="15sp" android:layout_centerVertical="true" android:layout_marginLeft="90dp" android:textColor="@color/hint" android:background="@null" android:layout_width="200dp" android:layout_height="40dp" />

        <TextView android:visibility="gone" android:gravity="center" android:layout_alignParentRight="true"  android:id="@+id/tv_right_val" android:textSize="15sp"  android:layout_centerVertical="true"   android:textColor="@color/hint" android:background="@null" android:layout_width="wrap_content" android:layout_marginRight="10dp" android:layout_height="wrap_content" />
        <View android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/line_color"></View>
    </RelativeLayout>


    <Button     android:enabled="false"  android:id="@+id/bt_ok" android:textSize="18sp" android:text="确定" android:textColor="@color/white" android:layout_margin="20dp" android:background="@drawable/btn_register_bg" android:layout_width="fill_parent" android:layout_height="40dp"/>

</LinearLayout>