<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">
    <TextView android:singleLine="true" android:ellipsize="end" android:layout_centerVertical="true" android:layout_marginRight="50dp" android:layout_marginLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textColor="@color/black" android:text="浙江省 (30)"
              android:id="@+id/tv_shengfen_count"/>
    <CheckBox  android:visibility="gone"  android:clickable="false"   android:layout_marginRight="10dp"  style="@style/custom_checkbox"  android:layout_centerVertical="true" android:layout_width="wrap_content"  android:layout_alignParentRight="true" android:layout_height="wrap_content"
               android:id="@+id/cb_select"/>
    <View android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/app_line"></View>
</RelativeLayout>