<?xml version="1.0" encoding="utf-8"?>
<com.duolaguanjia.view.LinearLayoutAutoHintInputMethod xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:mohe="http://schemas.android.com/apk/res/com.duolaguanjia"
                                                       android:orientation="vertical"
                                                       android:background="@color/whitesmoke"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent" >
    <ImageView android:layout_marginTop="20dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:layout_width="fill_parent" android:background="@drawable/ma" android:layout_height="280dp"/>

    <View  android:layout_marginTop="20dp"  android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/line_color"></View>
    <LinearLayout android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="@dimen/item_height" android:background="@color/white" android:orientation="horizontal">
        <com.duolaguanjia.view.WidgetInputItem
                android:id="@+id/wi_address_descript"
                mohe:input_hile="请输入绑定码"
                mohe:left_txt="绑定码"
                mohe:isline="false"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/item_height"
                android:orientation="vertical">
        </com.duolaguanjia.view.WidgetInputItem>
        <Button android:textColor="@color/white" android:layout_marginRight="10dp" android:layout_width="60dp" android:layout_height="30dp" android:background="@drawable/button_style" android:text="扫一扫" android:textSize="@dimen/text_size"
                android:id="@+id/bt_zxing"/>

    </LinearLayout>
    <View  android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/line_color"></View>
    <Button  android:layout_marginTop="20dp" android:textSize="16sp" android:text="完成" android:textColor="@color/white" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:background="@drawable/button_style" android:layout_width="fill_parent" android:layout_height="40dp"
            android:id="@+id/bt_next"/>
</com.duolaguanjia.view.LinearLayoutAutoHintInputMethod>