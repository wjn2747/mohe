<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/bank_item"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <ImageView android:layout_marginRight="10dp" android:id="@+id/iv_bank_logo" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_width="40dp" android:background="@drawable/bank_logo" android:layout_height="40dp"/>
   <TextView android:clickable="false" android:enabled="false" android:id="@+id/tv_bank_name" android:textStyle="bold"  android:layout_alignTop="@id/iv_bank_logo"  android:layout_toRightOf="@id/iv_bank_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="建设银行"  android:textSize="16sp" android:textColor="@color/white"/>
    <TextView android:id="@+id/tv_bank_type"  android:layout_alignBottom="@id/iv_bank_logo"  android:layout_toRightOf="@id/iv_bank_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="储蓄卡"  android:textSize="12sp" android:textColor="@color/white"/>

    <com.duolaguanjia.view.BankEditText android:singleLine="true" android:id="@+id/et_bank_no" android:background="@null" android:layout_toRightOf="@id/tv_bank_type" android:textColor="@color/white" android:textSize="23sp" android:layout_marginLeft="18dp" android:layout_marginTop="10dp" android:layout_below="@id/iv_bank_logo" android:layout_width="wrap_content" android:layout_height="30dp"/>
</RelativeLayout>