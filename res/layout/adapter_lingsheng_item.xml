<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
                android:background="@color/white"
              android:layout_height="100dp">
    <FrameLayout
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
    >
        <ImageView
                android:id="@+id/user_item_iv_avatar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bglistitem_selector_session_select"
                android:duplicateParentState="true"
                android:scaleType="fitXY" />
    </FrameLayout>
<Button android:layout_marginLeft="10dp" android:layout_alignTop="@id/imageView1" android:layout_toRightOf="@id/imageView1" android:id="@+id/bt_play" android:drawableRight="@drawable/dialog_voice"  android:gravity="center" android:textSize="12sp" android:paddingLeft="20dp" android:paddingRight="10dp" android:text="朵拉自带声音  " android:layout_width="wrap_content"  android:layout_height="35dp" android:background="@drawable/voice_box"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginLeft="20dp" android:layout_alignBottom="@id/imageView1" android:layout_toRightOf="@id/imageView1"
                  android:gravity="center"
                  android:visibility="gone"
                  android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_left_dingyue"
                android:ellipsize="end"
                android:hint=" 700"
                android:drawableLeft="@drawable/block_order"
                android:layout_marginRight="3dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:maxLines="1"
        />
        <TextView
                android:id="@+id/tv_left_descript"
                android:ellipsize="end"
                android:hint=" 600"
                android:drawableLeft="@drawable/block_love"
                android:layout_marginLeft="11dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:maxLines="1"
        />
    </LinearLayout>

    <TextView android:clickable="false" android:textColor="@color/white" android:gravity="center" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_width="65dp" android:textSize="13sp" android:text="免费" android:background="@drawable/button_style" android:layout_height="30dp"
            android:id="@+id/bt_ok"/>
</RelativeLayout>