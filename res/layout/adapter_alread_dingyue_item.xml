<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
                android:background="@color/white"
              android:layout_height="100dp">
    <FrameLayout
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
    >
        <ImageView
                android:id="@+id/user_item"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bill_item_bg"
                android:scaleType="fitXY"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bglistitem_selector_session_select"
                android:duplicateParentState="true"
                android:scaleType="fitXY" />
    </FrameLayout>
<TextView android:textColor="@color/black" android:layout_marginLeft="10dp" android:layout_alignTop="@id/imageView1" android:layout_toRightOf="@id/imageView1" android:id="@+id/bt_play" android:gravity="top" android:textSize="18sp" android:text="清晨叫醒" android:layout_width="wrap_content" android:layout_height="35dp" />
 <LinearLayout android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:layout_toRightOf="@id/imageView1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
     <FrameLayout
             android:id="@+id/imageView2"
             android:layout_width="30dp"
             android:layout_height="30dp"
     >
         <ImageView
                 android:id="@+id/user_item_iv_avatar"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:scaleType="fitXY"/>

         <ImageView
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:background="@drawable/round"
                 android:duplicateParentState="true"
                 android:scaleType="fitXY" />
     </FrameLayout>
     <TextView android:layout_marginLeft="10dp" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="谭唐" android:textSize="12sp" android:textColor="@color/black"
               android:id="@+id/tv_name"/>

 </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_marginLeft="10dp" android:textColor="@color/hint" android:textSize="12sp" android:text="2015-09-04  14:00" android:layout_alignBottom="@id/imageView1" android:layout_toRightOf="@id/imageView1"
              android:gravity="center"
              android:layout_height="wrap_content" android:id="@+id/tv_time">
    </TextView>

    <TextView android:clickable="false" android:textColor="@color/white" android:gravity="center" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_width="60dp" android:textSize="13sp" android:text="设置" android:background="@drawable/button_style" android:layout_height="30dp"
              android:id="@+id/bt_ok"/>
</RelativeLayout>