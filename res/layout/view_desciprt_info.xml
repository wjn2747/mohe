<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout  android:visibility="gone"    android:background="@color/white" android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="30dp" android:orientation="horizontal">
        <ImageView android:layout_margin="10dp" android:src="@drawable/business" android:layout_width="20dp" android:layout_height="20dp" />
   <TextView  android:textColor="@color/black" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="营业时间: "/>
