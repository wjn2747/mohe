    <ImageView   android:scaleType="centerCrop" android:id="@+id/iv_guige" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    <View android:layout_marginBottom="10dp" android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/line_color"></View>
    <View  android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/line_color"></View>
