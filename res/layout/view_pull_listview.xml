<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/whitesmoke"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<include layout="@layout/view_title"></include>
    <TextView android:visibility="gone" android:id="@+id/tv_nodata" android:layout_width="fill_parent" android:gravity="center"  android:textColor="#999999" android:textSize="20sp" android:text="暂无数据" android:layout_height="fill_parent"/>

    <com.app_sdk.view.xlistview.LaMaListView
            android:fadingEdge="none"
