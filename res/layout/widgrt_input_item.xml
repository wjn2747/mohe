<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/widget_menuitem_icon"
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:background="@drawable/duola"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
    />

    <TextView android:id="@+id/tv_input_name" android:layout_centerVertical="true" android:textSize="16sp" android:layout_marginLeft="10dp"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black"/>
    <com.duolaguanjia.view.EditTextWithDel android:textCursorDrawable="@drawable/color_cursor" android:id="@+id/et_input_content" android:textSize="15sp" android:layout_centerVertical="true" android:layout_marginLeft="100dp" android:textColor="@color/hint" android:background="@null" android:layout_width="200dp" android:layout_height="40dp" />
    <TextView android:visibility="gone" android:gravity="center" android:layout_alignParentRight="true"  android:id="@+id/tv_right_val" android:textSize="15sp"  android:layout_centerVertical="true"   android:textColor="@color/hint" android:background="@null" android:layout_width="wrap_content" android:layout_marginRight="10dp" android:layout_height="wrap_content" />
<View  android:id="@+id/view_line" android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/line_color"></View>
</RelativeLayout>