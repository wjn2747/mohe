<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:id="@+id/ll_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/imageView1"
                android:layout_width="105dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
        >

            <ImageView
                    android:id="@+id/user_item_iv_avatar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"/>

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bglistitem_selector_session_select"
                    android:duplicateParentState="true"
                    android:scaleType="fitXY" />
        </FrameLayout>

        <TextView android:id="@+id/tv_num" android:singleLine="true" android:maxLength="10"  android:textSize="14sp" android:layout_marginLeft="5dp"  android:textColor="@color/black" android:text="香辣鸡腿堡餐1份" android:layout_toRightOf="@id/imageView1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView  android:layout_alignParentRight="true" android:layout_marginLeft="5dp"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp"  android:textColor="@color/red" android:textSize="15sp" android:text="￥31.5"
                   android:id="@+id/tv_meney"/>
        <TextView android:layout_marginRight="10dp" android:textColor="@color/black" android:layout_marginTop="5dp" android:layout_below="@id/tv_meney" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:text="X1"
                  android:id="@+id/number"/>
    </RelativeLayout>
</LinearLayout>