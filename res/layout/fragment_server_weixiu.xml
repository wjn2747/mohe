<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/whitesmoke"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/view_title"></include>

    <TextView android:layout_marginTop="10dp" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请为魔盒从不同角度拍照" android:textSize="18sp" android:textColor="@color/app_color"/>
<LinearLayout android:id="@+id/ll_parent" android:layout_margin="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">


</LinearLayout>
    <EditText android:gravity="top" android:id="@+id/et_descript" android:hint="请描述魔盒的问题" android:layout_margin="10dp"  android:background="@drawable/pay_button_nor" android:layout_height="150dp" android:layout_width="fill_parent">

    </EditText>

    <Button android:layout_marginTop="20dp" android:textSize="18sp" android:text="申请维修" android:textColor="@color/white" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:background="@drawable/btn_register_bg" android:layout_width="fill_parent" android:layout_height="40dp"
            android:id="@+id/bt_ok"/>
</LinearLayout>